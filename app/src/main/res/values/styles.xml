<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackgroundStyleBlack">
        <item name="background">@color/black</item>
    </style>

    <style name="BackgroundStyleWhite">
        <item name="background">@color/white</item>
    </style>

    <style name="CalculatorButton">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalculatorButton.Orange">
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="CalculatorButton.GrayOne">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/gray_1</item>
    </style>

    <style name="CalculatorButton.GrayTwo">
        <item name="backgroundTint">@color/gray_2</item>
    </style>

    <style name="CalculatorButton.Land">
        <item name="android:textSize">@dimen/text_size_button_land</item>
    </style>

    <style name="CalculatorButton.Orange.Land">
        <item name="android:textSize">@dimen/text_size_button_land</item>
    </style>

    <style name="CalculatorButton.GrayOne.Land">
        <item name="android:textSize">@dimen/text_size_button_land</item>

    </style>

    <style name="CalculatorButton.GrayTwo.Land">
        <item name="android:textSize">@dimen/text_size_button_land</item>
    </style>


    <style name="CalculatorButton.Orange.V2">
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="CalculatorButton.Orange.Land.V2">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textSize">@dimen/text_size_button_land</item>
    </style>


    <style name="CalculatorButton.Orange.V3">
        <item name="backgroundTint">@color/purple_700</item>
    </style>

    <style name="CalculatorButton.Orange.Land.V3">
        <item name="backgroundTint">@color/purple_700</item>
        <item name="android:textSize">@dimen/text_size_button_land</item>
    </style>


</resources>